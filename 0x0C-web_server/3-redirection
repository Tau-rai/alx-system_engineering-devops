#!/usr/bin/env bash
# Installs nginx on web server
# and set /redirect_me to another page

# update package lists for upgrades
sudo apt-get update

# Install nginx
sudo apt-get install -y nginx

# start Nginx
sudo service nginx start

# create a simple html file
echo "Hello World!" > /var/www/html/index.html

# configure nginx to redirect /redirect_me to another page
file="/etc/nginx/sites-available/default"
new_string="location /redirect_me { return 301 https://google.com; }"
sed -i "s/server_name _;/a $new_string" $file 

# restart nginx
sudo service nginx restart
